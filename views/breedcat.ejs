            <li><a href="/catcontact">ติดต่อเรา</a></li>
        </ul>
        <% if (loggedIn) { %>
            <div class = "name">
                <%= UserData.name  %>
              </div>
         <button onclick="Logout();">Logout</button>
        <% } %>
        <% if (!loggedIn) { %>
          <button onclick="Signin();">Sign In</button>
          <button onclick="Signup();">Sign Up</button>
          
         <% } %>


         
        <script>
            function Signin(){
                window.location='/login';
            }
        </script>
        <script>
            function Signup(){
                window.location='/register';
            }
        </script>
          <script>
            function Logout(){
                window.location='/logout';
            }
        </script>
        
        
    </div>

    <div class="breed">
      
      

    
      <div class="inbreed">
            
        <p><a href="/percat"><img src="../img/per.jpg" alt width="500" height="450"></a></p>
